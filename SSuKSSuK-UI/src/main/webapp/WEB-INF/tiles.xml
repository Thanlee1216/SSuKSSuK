<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

  <definition name="base" template="/WEB-INF/common/layout/page.jsp">
    <put-attribute name="config" value="/WEB-INF/common/fragment/config.jsp" />
    <put-attribute name="header" value="/WEB-INF/common/fragment/header.jsp" />
    <put-attribute name="footer" value="/WEB-INF/common/fragment/footer.jsp" />
  </definition>

  <definition name="WILDCARD:*" extends="base">
    <put-attribute name="body" value="/WEB-INF/views/{1}.jsp"/>
  </definition>

  <definition name="WILDCARD:*/*" extends="base">
    <put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp"/>
  </definition>

  <definition name="WILDCARD:*/*/*" extends="base">
    <put-attribute name="body" value="/WEB-INF/views/{1}/{2}/{3}.jsp"/>
  </definition>

</tiles-definitions>